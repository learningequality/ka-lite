        {{/unless}}
    <span class="sidebar-description sidebar-content-description" data-topic-id="{{ id }}">{{ description }}</span>
    {{/ifcond}}

    {{#ifcond entity_kind "==" "Document"}}
    <div class="sidebar-entry-header">
        <span class="sidebar-icon icon-document" data-content-id="{{ content_id }}"></span>
        <span class="sidebar-title" data-content-id="{{ content_id }}">{{ title }}</span>
    </div>
        {{#unless organization}}
            <span class="sidebar-space-holder">  </span>
        {{else}}
            <span class="sidebar-organization">by: {{ organization }}</span>
        {{/unless}}
    <span class="sidebar-description sidebar-content-description" data-topic-id="{{ id }}">{{ description }}</span>
    {{/ifcond}}
</a>
{{/ifcond}}