<div class="login">
    <div class="panel panel-default">
        <div class="panel-body">
            {{#if facilities}}
            <div class="input-group">
              <span class="input-group-addon" id="login-facility-addon">{{_ "Facility" }}</span>
              <select class="form-control" id="login-facility" aria-describedby="login-facility-addon">
                {{#each facilities}}
                  <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
            </br>
            {{/if}}
            <div class="input-group">
              <span class="input-group-addon" id="login-username-addon">{{_ "Username" }}</span>
              <input type="text" class="form-control" id="login-username" placeholder="Username" aria-describedby="login-username-addon">
            </div>
            </br>
            <div class="input-group" {{#if simplified_login}}style="display: none;"{{/if}}>
              <span class="input-group-addon" id="login-password-addon">{{_ "Password" }}</span>
              <input type="password" class="form-control" id="login-password" aria-describedby="login-password-addon">
            </div>
            </br>
            <button class="login-btn btn btn-lg btn-primary" type="submit">{{_ "Login" }}</button>
            {{#if simplified_login}}
              <button class="password-btn btn btn-danger" type="submit">{{_ "Admin" }}/{{_ "Coach" }}</button>
            {{/if}}
        </div>
    </div>
</div>