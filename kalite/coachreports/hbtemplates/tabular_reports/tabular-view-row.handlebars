<th class="username">
    <span title="{{ first_name }} {{last_name}}({{ username }})">
        <div class="student-name">
            <a href="{{ url "student_view" }}?user={{ pk }}">{{#ifcond first_name "||" last_name }}{{ first_name }}<br>{{last_name}}{{else}}{{username}}{{/ifcond}}</a>
        </div>
    </span>
</th>
