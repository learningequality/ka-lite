<div class="form-group">
    <label for="group-name" class="col-xs-2">Group</label>
    <div class="col-xs-8">
        {{#if loading}}
            <img src="/static/images/loading.gif" class="float-center float-over-select loading"/>
        {{/if}}
        <select class="form-control {{#if loading}}loading-transparency{{/if}}" id="group-name" {{#if is_disabled}}disabled{{/if}}>
            {{#if groups }}
                <option value="">All</option>
                {{#each groups}}
                    <option value="{{id}}" {{#ifcond ../selection "===" id }}selected{{/ifcond}}>{{ name }}</option>
                {{/each}}
            {{else}}
                <option disabled>All</option>
            {{/if}}
        </select>
    </div>
</div>